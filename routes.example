// Navigation
app.get('', (req, res) => {
  res.render('home', { title: 'Inicio | Mohamed Hay | Consultorio psicológico'})
});

app.get('/inicio', (req, res) => {
    res.render('home', { title: 'Inicio | Mohamed Hay | Consultorio psicológico'})
  });

app.get('/blog', (req, res) => {
    res.render('blog', { title: 'Blog | Mohamed Hay | Consultorio psicológico'}, { posts })
});

// Individual post route
app.get('/post/:id', (req, res) => {
    const post = posts.find(post => post.id === parseInt(req.params.id));
    res.render('post', { post });
  });


app.get('/servicios', (req, res) => {
    res.render('services', { title: 'Servicios | Mohamed Hay | Consultorio psicológico'})
});

app.get('/nosotros', (req, res) => {
    res.render('us', { title: 'Nosotros | Mohamed Hay | Consultorio psicológico'})
});

app.get('/contacto', (req, res) => {
    res.render('contact', { title: 'Contacto | Mohamed Hay | Consultorio psicológico'})
});




